<!-- Control Panel -->
<View class="UIPanel" style="flex-direction: column; gap: 5px; align-row: center; align-col: end; padding: 5px;">
    <View style="flex-direction: row; font-size: 14px; gap: 5px; align-row: center; align-col: center; width: 200px; height: 20px">
        <Text key="time" style="outline: 1px; text-align: center"/>
        <Text key="step" style="outline: 1px; text-align: center"/>
    </View>
    <View key="controlPanel" class="container panel" style="width: 280px; height: 50px; padding: 5px;">
        <View style="width: 100%; flex: 1; flex-direction: row;">
            <View style="width: 50px; height: 100%;"/>
            <View class="container" style="background: rgba(255,255,255,70); border: 0px 20px;
             flex-direction: row; height: 100%; flex: 1;
             align-row: center; align-col: start; gap: 10px; padding: 5px;">
                <Button key="slowDownBtn" class="mainBtn"
                        style="height: 100%; border: 0px 10px 20px 20px 10px;"
                        onClick="slowDown">
                    <Image key="slowDownIcon" style="flex: 1; image: slowDown"
                           styleOnHover="image: slowDownHighlighted"/>
                </Button>
                <Button key="playBtn" class="mainBtn"
                        style="height: 100%; border: 0px 10px;"
                        onClick="togglePaused">
                    <Image key="playBtnIcon" style="flex: 1; image: pause;" styleOnHover="image: pauseHighlighted"/>
                </Button>
                <Button key="speedUpBtn" class="mainBtn"
                        style="height: 100%; border: 0px 20px 10px 10px 20px"
                        onClick="speedUp">
                    <Image key="speedUpIcon" style="flex: 1; image: speedUp;" styleOnHover="image: speedUpHighlighted"/>
                </Button>
            </View>
            <View style="width: 50px; height: 100%">
                <Text key="speed" style="font-size: 14px; outline: 1px;">
                    x1
                </Text>
            </View>
        </View>
        <!--<Button key="createRandom" class="mainBtn" style="margin: 40px 0px; width: 100%; flex: 1"
                onClick="createRandom">
            <Text>Create Random</Text>
        </Button>
        <Button key="reset" class="mainBtn" style="margin: 40px 0px; width: 100%; flex: 1" onClick="reset">
            <Text>Reset</Text>
        </Button>-->
    </View>
</View>